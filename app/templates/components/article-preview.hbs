<div class="row">
  <div class="large-2 columns">&nbsp;</div>
  <div class="large-8 columns">
    <article id={{article.id}}>
      <div class="large-12 columns">
        <header>
          <h1>
            {{link-to article.title 'article' article.year article.month
            article.day article.href}}
          </h1>
        </header>

        <main>
          {{yield}}
        </main>

        <footer>
          <p class="large-6 columns">
            Posted <span class="date">{{article.formattedDate}}</span> in
            <span class="category">{{article.category}}</span>.
          </p>
          <div class="large-4 columns">&nbsp;</div>
          <p id="more-link" class="large-2 columns">
            {{#link-to 'article' article.year article.month article.day article.href class="tiny round secondary button"}}
              more &raquo;
            {{/link-to}}
          </p>
        </footer>
      </div>
    </article>
  </div>
  <div class="large-2 columns">&nbsp;</div>
</div>
