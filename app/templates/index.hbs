{{#each model as |article|}}
  <blog-article title={{article.title}} category-name={{article.category}} date-string={{article.date}}>
    {{article.body}}
  </blog-article>
{{else}}
  <div class="large-3 columns">&nbsp;</div>
  <div class="large-6 columns">
    <div class="alert-box warning radius">
      No articles found.
    </div>
  </div>
  <div class="large-3 columns">&nbsp;</div>
{{/each}}
